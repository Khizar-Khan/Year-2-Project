<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">



                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#8030230A">

                                <Button
                                    android:id="@+id/profileBTN"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="#00FFFFFF"
                                    android:onClick="profileSelection" />

                                <ImageView
                                    android:id="@+id/profileIMG"
                                    android:layout_width="100dp"
                                    android:layout_height="70dp"
                                    android:layout_centerInParent="true"
                                    android:layout_centerVertical="false"
                                    app:srcCompat="@drawable/profile" />

                                <TextView
                                    android:id="@+id/profileTXT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/profileIMG"
                                    android:layout_centerHorizontal="true"
                                    android:text="Profile"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#8030230A">

                                <Button
                                    android:id="@+id/modulesBTN"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="#00FFFFFF"
                                    android:onClick="moduleSelection" />

                                <ImageView
                                    android:id="@+id/modulesIMG"
                                    android:layout_width="100dp"
                                    android:layout_height="70dp"
                                    android:layout_centerInParent="true"
                                    app:srcCompat="@drawable/modules" />

                                <TextView
                                    android:id="@+id/modulesTXT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/modulesIMG"
                                    android:layout_centerHorizontal="true"
                                    android:text="Modules"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#8030230A">

                                <Button
                                    android:id="@+id/timetableBTN"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="#00FFFFFF"
                                    android:onClick="timetableSelection" />

                                <ImageView
                                    android:id="@+id/timetableIMG"
                                    android:layout_width="100dp"
                                    android:layout_height="70dp"
                                    android:layout_centerInParent="true"
                                    app:srcCompat="@drawable/timetable" />

                                <TextView
                                    android:id="@+id/timetableTXT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/timetableIMG"
                                    android:layout_centerHorizontal="true"
                                    android:text="Timetable"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#8030230A">

                                <Button
                                    android:id="@+id/chatBTN"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="#00FFFFFF"
                                    android:onClick="industryPlacementsSelection" />

                                <ImageView
                                    android:id="@+id/chatIMG"
                                    android:layout_width="100dp"
                                    android:layout_height="70dp"
                                    android:layout_centerInParent="true"
                                    app:srcCompat="@drawable/industry" />

                                <TextView
                                    android:id="@+id/chatTXT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/chatIMG"
                                    android:layout_centerHorizontal="true"
                                    android:text="Industry Placements"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#8030230A">

                                <Button
                                    android:id="@+id/resourcesBTN"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="#00FFFFFF"
                                    android:onClick="resourceSelection" />

                                <ImageView
                                    android:id="@+id/resourcesIMG"
                                    android:layout_width="100dp"
                                    android:layout_height="70dp"
                                    android:layout_centerInParent="true"
                                    app:srcCompat="@drawable/resources" />

                                <TextView
                                    android:id="@+id/resourcesTXT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/resourcesIMG"
                                    android:layout_centerHorizontal="true"
                                    android:text="Resources"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="#FFFFFF"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#8030230A">

                                <Button
                                    android:id="@+id/gradeCalcBTN"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="#00FFFFFF"
                                    android:onClick="gradeCalculatorSelection" />

                                <ImageView
                                    android:id="@+id/gradeCalcIMG"
                                    android:layout_width="100dp"
                                    android:layout_height="70dp"
                                    android:layout_centerInParent="true"
                                    app:srcCompat="@drawable/grade_calc" />

                                <TextView
                                    android:id="@+id/gradeCalcTXT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/gradeCalcIMG"
                                    android:layout_centerHorizontal="true"
                                    android:text="Grade Calculator"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#8030230A">

                                <Button
                                    android:id="@+id/discussionBTN"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="#00FFFFFF"
                                    android:onClick="resourceSelection" />

                                <ImageView
                                    android:id="@+id/discussionIMG"
                                    android:layout_width="100dp"
                                    android:layout_height="70dp"
                                    android:layout_centerInParent="true"
                                    app:srcCompat="@drawable/chat" />

                                <TextView
                                    android:id="@+id/discussionTXT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/discussionIMG"
                                    android:layout_centerHorizontal="true"
                                    android:text="Discussion"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="#FFFFFF"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#8030230A">

                                <Button
                                    android:id="@+id/resetBTN"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="#00FFFFFF"
                                    android:onClick="gradeCalculatorSelection" />

                                <ImageView
                                    android:id="@+id/resetIMG"
                                    android:layout_width="65dp"
                                    android:layout_height="65dp"
                                    android:layout_centerInParent="true"
                                    app:srcCompat="@drawable/reset" />

                                <TextView
                                    android:id="@+id/resetTXT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/resetIMG"
                                    android:layout_centerHorizontal="true"
                                    android:text="Reset Forum"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/logoutButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="#989083"
                            android:onClick="logout"
                            android:text="Logout"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:background="@drawable/back"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="120dp"
                        android:layout_height="96dp"
                        android:layout_gravity="center"
                        android:src="@drawable/home" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageView6"
                        android:layout_gravity="center"
                        android:text="HOME PAGE"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>