                        <ListView
                            android:id="@+id/cs2003ListView"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"></ListView>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Switch
                android:id="@+id/CS2004SWITCH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="serif-monospace"
                android:text="CS2004:"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cs2004"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="@color/colorSecondary">

                <LinearLayout
                    android:id="@+id/cs2004LinearSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ListView
                            android:id="@+id/cs2004ListView"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"></ListView>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Switch
                android:id="@+id/CS2005SWITCH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="serif-monospace"
                android:text="CS2005:"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cs2005"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="@color/colorSecondary">

                <LinearLayout
                    android:id="@+id/cs2005LinearSection"
                    android:layout_width="match_parent"
